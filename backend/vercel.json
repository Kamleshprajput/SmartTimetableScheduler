{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "solver.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/py/(.*)", "dest": "solver.py" },
    { "src": "/generate", "dest": "server.js" },
    { "src": "/health", "dest": "server.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
